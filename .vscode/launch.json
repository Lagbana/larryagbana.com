{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "name": "Debug local file",
      "runtimeArgs": ["-r", "ts-node/register"], // for a simple typescript configuration
      "args": ["${relativeFile}"], // when the file is open, this directive runs it
      "env": {
        "AWS_REGION": "us-east-1",
        "TABLE_NAME": "SpacesTable-0e03cf9d7dff"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current Url Shortner File",
      "program": "${workspaceFolder}/url-shortner/node_modules/.bin/jest",
      "args": [
        "--runTestsByPath",
        "${relativeFile}",
        "--config",
        "url-shortner/jest.config.ts"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
